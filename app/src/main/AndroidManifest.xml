<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.s4plabs.logbook" >
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_main"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.SignupActivity"
            android:label="@string/app_name"
            android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:label="@string/app_name"/>

        <activity android:name=".ui.LoginActivity"
            android:label="Login"
            android:theme="@style/LoginTheme"/>

        <activity
            android:name=".ui.Editor"
            android:label="LogBook" >
        </activity>

        <activity android:name=".ui.Settings"
            android:label="Settings"/>

        <activity android:name=".ui.ExpandableListView"
            android:label="My Logs"/>

        <activity android:name=".ui.SearchViewer"
            android:label="Search Results"/>
    </application>

</manifest>
